{
  "designSystem": {
    "name": "Purpose Talent Design System",
    "version": "1.0.0",
    "description": "A comprehensive design system for the Purpose Talent platform, focusing on talent acquisition and business growth",
    
    "tokens": {
      "colors": {
        "primary": {
          "black": "#1e1e1e",
          "lightBrown": "#a79785",
          "yellow": "#f0b420",
          "purple": "#b0a5f4",
          "red": "#f36c5a"
        },
        "neutral": {
          "bgColor": "#f9f2e9",
          "lightBrownGray": "#f2e8dc",
          "gray": "#fffaf3",
          "lightBlack": "#403f3e",
          "darkBrownGray": "#e8ddd0",
          "white": "#ffffff"
        },
        "semantic": {
          "success": "#3898ec",
          "error": "#ea384c",
          "warning": "#f0b420",
          "info": "#0082f3"
        },
        "opacity": {
          "lightBrownAlpha": "#a7978540",
          "blackAlpha": "#1e1e1e99",
          "transparentBg": "#f2e8dc00"
        }
      },
      
      "typography": {
        "fontFamily": {
          "primary": "'Decoy', serif",
          "secondary": "'Raleway', sans-serif",
          "fallback": "sans-serif"
        },
        "fontWeights": {
          "light": 300,
          "normal": 400,
          "medium": 500,
          "semibold": 600,
          "bold": 700,
          "black": 900,
          "ultraBlack": 950
        },
        "fontSizes": {
          "txt12": "0.8vw",
          "txt14": "0.9vw",
          "txt16": "1.1vw",
          "txt20": "1.3vw",
          "txt26": "1.8vw",
          "txt40": "2.7vw",
          "txt60": "4.1vw",
          "txt100": "6.9vw",
          "txt140": "9.7vw",
          "txt150": "10.4vw",
          "txt220": "15.2vw"
        },
        "mobileFontSizes": {
          "txt12": "3.2vw",
          "txt14": "3.7vw",
          "txt16": "4vw",
          "txt20": "5.3vw",
          "txt26": "5.3vw",
          "txt40": "8.8vw",
          "txt60": "11.4vw",
          "txt100": "15.4vw",
          "txt140": "15.4vw",
          "txt150": "19.4vw",
          "txt220": "22vw"
        },
        "lineHeights": {
          "h100": "100%",
          "h110": "110%",
          "h130": "130%"
        }
      },
      
      "spacing": {
        "container": {
          "padding": "3.3vw 1.6vw",
          "introPadding": "8vw 1.6vw",
          "footerPadding": "7vw 1.6vw 1.6vw"
        },
        "grid": {
          "gap": {
            "xs": "0.4vw",
            "sm": "0.8vw",
            "md": "1.1vw",
            "lg": "2.2vw",
            "xl": "4vw"
          }
        },
        "margins": {
          "xs": "0.5vw",
          "sm": "1vw",
          "md": "2vw",
          "lg": "4vw",
          "xl": "6vw"
        },
        "padding": {
          "xs": "0.3vw",
          "sm": "0.7vw",
          "md": "1.1vw",
          "lg": "2.2vw",
          "xl": "3.3vw"
        }
      },
      
      "shadows": {
        "light": "1px 2px 9px #7b5e5c0f",
        "medium": "5px 2px 9px #7b5e5c0f",
        "focus": "0 0 3px 1px #3898ec"
      },
      
      "borderRadius": {
        "none": "0",
        "sm": "0.2vw",
        "md": "0.4vw",
        "lg": "0.8vw"
      }
    },
    
    "components": {
      "button": {
        "base": {
          "className": "sec-btn",
          "display": "inline-block",
          "position": "relative",
          "padding": "1.1vw 2.5vw",
          "textDecoration": "none",
          "cursor": "pointer",
          "overflow": "hidden"
        },
        "variants": {
          "primary": {
            "className": "sec-btn",
            "backgroundColor": "var(--yellow)",
            "color": "var(--black)"
          },
          "secondary": {
            "className": "sec-btn transparent",
            "backgroundColor": "transparent",
            "border": "1px solid var(--light-brown)",
            "color": "var(--black)"
          },
          "dark": {
            "className": "sec-btn black-bg",
            "backgroundColor": "var(--black)",
            "color": "var(--white)"
          }
        },
        "states": {
          "hover": {
            "className": "btn-hover-bg",
            "transform": "scale(1.05)"
          }
        }
      },
      
      "navigation": {
        "navbar": {
          "className": "nav",
          "position": "fixed",
          "top": "0",
          "width": "100%",
          "zIndex": "1000",
          "display": "flex",
          "justifyContent": "space-between",
          "alignItems": "center",
          "padding": "1.6vw"
        },
        "navButton": {
          "className": "nav-btn",
          "display": "inline-block",
          "padding": "0.7vw 1.6vw",
          "borderRadius": "var(--border-radius-md)",
          "transition": "all 0.3s ease"
        },
        "mobileNav": {
          "className": "mob-nav",
          "position": "fixed",
          "top": "0",
          "left": "0",
          "width": "100%",
          "height": "100vh",
          "backgroundColor": "var(--bg-color)",
          "zIndex": "999"
        }
      },
      
      "card": {
        "base": {
          "className": "service-card",
          "padding": "2.2vw",
          "backgroundColor": "var(--white)",
          "borderRadius": "var(--border-radius-lg)",
          "boxShadow": "var(--shadow-medium)"
        },
        "variants": {
          "forCard": {
            "className": "for-card",
            "display": "flex",
            "flexDirection": "column",
            "gap": "1.6vw"
          },
          "serviceCard": {
            "className": "service-card",
            "textAlign": "center"
          }
        }
      },
      
      "typography": {
        "heading": {
          "h1": {
            "className": "txt220",
            "fontSize": "var(--font-size-txt220)",
            "fontFamily": "var(--font-family-primary)",
            "fontWeight": "var(--font-weight-normal)",
            "lineHeight": "var(--line-height-h100)"
          },
          "h2": {
            "className": "txt140",
            "fontSize": "var(--font-size-txt140)",
            "fontFamily": "var(--font-family-primary)",
            "fontWeight": "var(--font-weight-normal)"
          },
          "h3": {
            "className": "txt100",
            "fontSize": "var(--font-size-txt100)",
            "fontFamily": "var(--font-family-primary)",
            "fontWeight": "var(--font-weight-normal)"
          },
          "h4": {
            "className": "txt60",
            "fontSize": "var(--font-size-txt60)",
            "fontFamily": "var(--font-family-primary)",
            "fontWeight": "var(--font-weight-normal)"
          },
          "h5": {
            "className": "txt40",
            "fontSize": "var(--font-size-txt40)",
            "fontFamily": "var(--font-family-primary)",
            "fontWeight": "var(--font-weight-normal)"
          }
        },
        "body": {
          "large": {
            "className": "txt20",
            "fontSize": "var(--font-size-txt20)",
            "lineHeight": "var(--line-height-h130)"
          },
          "medium": {
            "className": "txt16",
            "fontSize": "var(--font-size-txt16)",
            "lineHeight": "var(--line-height-h130)"
          },
          "small": {
            "className": "txt14",
            "fontSize": "var(--font-size-txt14)",
            "lineHeight": "var(--line-height-h110)"
          },
          "caption": {
            "className": "txt12",
            "fontSize": "var(--font-size-txt12)",
            "lineHeight": "var(--line-height-h100)"
          }
        },
        "modifiers": {
          "semibold": {
            "className": "semi",
            "fontWeight": "var(--font-weight-semibold)"
          },
          "bold": {
            "className": "bold",
            "fontWeight": "var(--font-weight-bold)"
          },
          "uppercase": {
            "className": "upper",
            "textTransform": "uppercase"
          }
        }
      },
      
      "layout": {
        "container": {
          "className": "container",
          "maxWidth": "100%",
          "margin": "0 auto",
          "padding": "var(--container-padding)"
        },
        "grid": {
          "className": "grid",
          "display": "grid",
          "gap": "var(--grid-gap-md)"
        },
        "flexbox": {
          "className": "flex",
          "display": "flex",
          "alignItems": "center",
          "gap": "var(--grid-gap-sm)"
        }
      },
      
      "decorative": {
        "noise": {
          "className": "noise",
          "position": "fixed",
          "top": "0",
          "left": "0",
          "width": "100%",
          "height": "100%",
          "backgroundImage": "url('images/6707b45e1c28f88fc781209a_noise.webp')",
          "opacity": "0.1",
          "pointerEvents": "none",
          "zIndex": "-1"
        },
        "decorativeImage": {
          "className": "dec-img",
          "position": "absolute",
          "pointerEvents": "none"
        }
      },
      
      "preloader": {
        "className": "preloader",
        "position": "fixed",
        "top": "0",
        "left": "0",
        "width": "100%",
        "height": "100vh",
        "backgroundColor": "var(--bg-color)",
        "display": "flex",
        "justifyContent": "center",
        "alignItems": "center",
        "zIndex": "9999"
      }
    },
    
    "breakpoints": {
      "mobile": "768px",
      "tablet": "1024px",
      "desktop": "1200px",
      "large": "1440px"
    },
    
    "animations": {
      "transitions": {
        "fast": "0.15s ease",
        "normal": "0.3s ease",
        "slow": "0.5s ease"
      },
      "transforms": {
        "scale": "scale(1.05)",
        "rotate": "rotate(180deg)",
        "translate": "translate3d(0, -10px, 0)"
      }
    },
    
    "utilities": {
      "visibility": {
        "hidden": {
          "className": "hidden",
          "display": "none"
        },
        "visible": {
          "className": "visible",
          "display": "block"
        },
        "mobHide": {
          "className": "mob-hide",
          "display": "none"
        }
      },
      "positioning": {
        "relative": {
          "className": "rel",
          "position": "relative"
        },
        "absolute": {
          "className": "abs",
          "position": "absolute"
        },
        "fixed": {
          "className": "fixed",
          "position": "fixed"
        }
      },
      "opacity": {
        "op30": {
          "className": "op30",
          "opacity": "0.3"
        },
        "op50": {
          "className": "op50",
          "opacity": "0.5"
        }
      }
    }
  }
}