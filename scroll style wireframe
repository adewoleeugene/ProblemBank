    <script>
        function toggleScroll() {
            const scroll = document.getElementById('hackathon-scroll');
            // Toggle the 'unrolled' class to trigger the CSS transition
            scroll.classList.toggle('unrolled');
            
            const promptText = scroll.querySelector('.scroll-prompt-text');
            const arrowIcon = document.getElementById('arrow-icon');

            if (scroll.classList.contains('unrolled')) {
                promptText.textContent = "Click to Roll Up Guide";
                arrowIcon.textContent = "▲";
                arrowIcon.classList.add('rotate-180');
            } else {
                promptText.textContent = "Click to Read the Big 5 AI and Blockchain Hackathon Guide";
                arrowIcon.textContent = "▼";
                arrowIcon.classList.remove('rotate-180');
            }
        }
    </script>
